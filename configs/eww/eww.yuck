  (box :class "game-launcher"
       :orientation "v"
       :spacing 20
    (label :text "ðŸŽ® Game Launcher" :class "launcher-title")
    (box :class "game-grid"
         :orientation "v"
         :spacing 10
      (box :orientation "h" :spacing 10
        (button :class "game-btn steam"
                :onclick "steam"
                (box :orientation "v"
                  (label :text "ðŸŽ®" :class "game-icon")
                  (label :text "Steam")))
        (button :class "game-btn lutris"
                :onclick "lutris"
                (box :orientation "v"
                  (label :text "ðŸ·" :class "game-icon")
                  (label :text "Lutris")))
        (button :class "game-btn heroic"
                :onclick "heroic"
                (box :orientation "v"
                  (label :text "ðŸ†" :class "game-icon")
                  (label :text "Heroic"))))
      (box :orientation "h" :spacing 10
        (button :class "game-btn discord"
                :onclick "discord"
                (box :orientation "v"
                  (label :text "ðŸ’¬" :class "game-icon")
                  (label :text "Discord")))
        (button :class "game-btn obs"
                :onclick "obs"
                (box :orientation "v"
                  (label :text "ðŸ“¹" :class "game-icon")
                  (label :text "OBS")))
        (button :class "game-btn mangohud"
                :onclick "mangohud"
                (box :orientation "v"
